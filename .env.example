# ==========================================
# CONFIGURATION ENVIRONNEMENT LYM
# ==========================================

# Google AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_key_here
GOOGLE_AI_MODEL=gemini-1.5-pro

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_LOCATION=us-central1
GOOGLE_VERTEX_API_KEY=your_vertex_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=./keys/service-account.json

# Database Configuration
DATABASE_PUBLIC_URL=postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@host:port/database

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ==========================================
# NEXTAUTH - AUTHENTIFICATION
# ==========================================
# URL de l'application (important pour les callbacks OAuth)
NEXTAUTH_URL=http://localhost:3000

# Secret pour signer les JWT (générer avec: openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-key-change-this-in-production

# ==========================================
# GOOGLE OAUTH (obligatoire)
# ==========================================
# Créer sur https://console.cloud.google.com/apis/credentials
# Type: Application Web
# URI de redirection: {NEXTAUTH_URL}/api/auth/callback/google
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

